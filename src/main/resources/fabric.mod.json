{
  "schemaVersion": 1,
  "id": "toms_compressibles",
  "version": "${version}",

  "name": "Tom's Compressibles",
  "description": "This is a simple mod that allows certain blocks/items to be crafted into compressed forms (ex: Cobblestone).",
  "authors": [
    "TomVHS"
  ],
  "contact": {
    "homepage": "https://github.com/TomVHS",
    "sources": "https://github.com/TomVHS/Toms-Compressibles"
  },

  "license": "CC0-1.0",
  "icon": "assets/toms_compressibles/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "git.tomvhs.compressibles.CompressiblesMod"
    ]
  },
  "mixins": [
    "toms_compressibles.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.13.3",
    "fabric": "*",
    "minecraft": "~1.18.2",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
